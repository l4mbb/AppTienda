<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCarritoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tus Compras"
        android:textSize="24sp"
        android:layout_marginBottom="8dp" /> <!-- Espacio entre el título y la imagen -->

    <ImageView
        android:id="@+id/ivCarritoVacio"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Carrito vacío"
        android:src="@drawable/carrito"
        android:layout_marginBottom="8dp" /> <!-- Espacio entre la imagen y el texto -->

    <TextView
        android:id="@+id/tvCarritoVacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El carrito está vacío"
        android:textSize="18sp"
        android:layout_gravity="center"
        />

</LinearLayout>
